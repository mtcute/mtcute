{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "es2020",
        "allowJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "incremental": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "paths": {
            "~scripts/*": ["./scripts/*"],
        },
        "composite": true
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "exclude": [
        "**/node_modules",
    ]
}
